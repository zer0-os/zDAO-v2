// From ZNS
{
  "ts-node": {
    "compilerOptions": {
      "module": "node16"
    }
  },
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "ESNext",
    "target": "es2022",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "outDir": "dist",
    "types": ["hardhat", "hardhat-viem", "viem"]
  }
}
